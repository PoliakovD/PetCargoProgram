<Window x:Class="TestASTMwindow.MainWindow"
       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:vm="clr-namespace:ViewModel.ASTM;assembly=ViewModel.ASTM"
        mc:Ignorable="d"
        Title="ASTM_Window" Height="450" Width="800"
        Icon ="E:\C_SHARP\TOP\WPF\dz cod\PetCargoProgram\PetCargoProgram\bin\Debug\net9.0-windows\icons\ASTM_ico.png">
    <Window.Resources>
        <ResourceDictionary Source="Styles/Styles.xaml"/>
    </Window.Resources>
    <Window.DataContext>
        <vm:ViewModelASTM/>
    </Window.DataContext>
    <Grid>
        <StackPanel Orientation="Vertical">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Label Grid.Column="0" Target="IO_API60F" Content="API 60 F"
                       Style="{StaticResource Style_LabelDownMenu}" />
                <TextBox Grid.Column="1" Name="IO_API60F"
                         Style="{StaticResource Style_TextBoxValues}"
                         Text="{Binding API, Mode=TwoWay, UpdateSourceTrigger=LostFocus,
                             StringFormat=\{0:f2\} }"
                         KeyDown="Event_LoseFocusOnEnter" />
            </Grid>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Label Grid.Column="0" Target="IO_Den60F" Content="Den. 60/60F"
                       Style="{StaticResource Style_LabelDownMenu}"
                       KeyDown="Event_LoseFocusOnEnter" />
                <TextBox Grid.Column="1" Name="IO_Den60F"
                         Style="{StaticResource Style_TextBoxValues}"
                         Text="{Binding Density60, Mode=TwoWay, UpdateSourceTrigger=LostFocus,
                             StringFormat=\{0:f4\}}" />
            </Grid>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Label Grid.Column="0" Target="IO_Den15C" Content="Den. 15C mt/m3"
                       Style="{StaticResource Style_LabelDownMenu}" />
                <TextBox Grid.Column="1" Name="IO_Den15C"

                         Style="{StaticResource Style_TextBoxValues}"
                         Text="{Binding Density15, Mode=TwoWay, UpdateSourceTrigger=LostFocus,
                             StringFormat=\{0:f4\}}"
                         KeyDown="Event_LoseFocusOnEnter" />

            </Grid>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Label Grid.Column="0" Target="IO_CurrentTemperature" Content="Temperature"
                       Style="{StaticResource Style_LabelDownMenu}" />
                <TextBox Grid.Column="1" Name="IO_CurrentTemperature"

                         Style="{StaticResource Style_TextBoxValues}"
                         Text="{Binding CurrentTemperature, Mode=TwoWay, UpdateSourceTrigger=LostFocus,
                             StringFormat=\{0:f1\} }"
                         KeyDown="Event_LoseFocusOnEnter" />

            </Grid>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Label Grid.Column="0" Target="Output_VolumeCorrection" Content="Volume Correction"
                       Style="{StaticResource Style_LabelDownMenu}" />
                <TextBlock Grid.Column="1" Name="Output_VolumeCorrection"
                           Text="{Binding VolumeCorrection, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged,
                               StringFormat=\{0:f4\} }"
                           HorizontalAlignment="Right" />

            </Grid>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Label Grid.Column="0" Target="Output_WeightAirToVac" Content="WeightAirToVac"
                       Style="{StaticResource Style_LabelDownMenu}" />
                <TextBlock Grid.Column="1" Name="Output_WeightAirToVac"
                           Text="{Binding WeightAirToVac, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged,
                             StringFormat=\{0:f4\} }"
                           HorizontalAlignment="Right" />

            </Grid>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Label Grid.Column="0" Target="Output_WeightVacToAir" Content="WeightVacToAir"
                       Style="{StaticResource Style_LabelDownMenu}" />
                <TextBlock Grid.Column="1" Name="Output_WeightVacToAir"
                           Text="{Binding WeightVacToAir, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged,
                             StringFormat=\{0:f4\}}"
                           HorizontalAlignment="Right" />

            </Grid>
        </StackPanel>
    </Grid>
</Window>

