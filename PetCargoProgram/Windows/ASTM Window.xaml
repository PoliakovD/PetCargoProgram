<Window x:Class="PetCargoProgram.Windows.ASTMWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:vm="clr-namespace:ViewModel.ASTM;assembly=ViewModel.ASTM"
        xmlns:components="clr-namespace:PetCargoProgram.Components"
        mc:Ignorable="d"
        Icon="/icons/ASTM_ico.png"
        Title="ASTM"
        SizeToContent="WidthAndHeight"
        ResizeMode="NoResize">
    <!--  -->
    <!-- Подключение стилей -->
    <Window.Resources>
        <ResourceDictionary Source="StylesWindowASTM.xaml" />
    </Window.Resources>
    <Window.Background>
        <StaticResource ResourceKey="PrimaryLightBrush" />
    </Window.Background>

    <!-- Привязка данных -->
    <Window.DataContext>
        <vm:ViewModelASTM />
    </Window.DataContext>

    <!-- Основной контент с отступами -->
    <Grid Margin="0">
        <StackPanel Orientation="Vertical" Style="{StaticResource MainStackPanelStyle}">

            <!-- API 60 F -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Label Grid.Column="0"
                       Content="API 60 F"
                       Style="{StaticResource Style_LabelDownMenu}" />
                <TextBox Grid.Column="1"
                         Style="{StaticResource Style_TextBoxValues}"
                         Text="{Binding API, Mode=TwoWay, UpdateSourceTrigger=LostFocus, StringFormat={}{0:f2}}"
                         KeyDown="Event_LoseFocusOnEnter"
                         components:SelectTextOnFocus.Active="True"/>
            </Grid>

            <!-- Density 60/60F -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Label Grid.Column="0"
                       Content="Den. 60/60F"
                       Style="{StaticResource Style_LabelDownMenu}" />
                <TextBox Grid.Column="1"
                         Style="{StaticResource Style_TextBoxValues}"
                         Text="{Binding Density60, Mode=TwoWay, UpdateSourceTrigger=LostFocus, StringFormat={}{0:f4}}"
                         KeyDown="Event_LoseFocusOnEnter"
                         components:SelectTextOnFocus.Active="True"/>
            </Grid>

            <!-- Density 15C -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Label Grid.Column="0"
                       Content="Den. 15C mt/m3"
                       Style="{StaticResource Style_LabelDownMenu}" />
                <TextBox Grid.Column="1"
                         Name="IO_Den15C"
                         Style="{StaticResource Style_TextBoxValues}"
                         Text="{Binding Density15, Mode=TwoWay, UpdateSourceTrigger=LostFocus, StringFormat={}{0:f4}}"
                         KeyDown="Event_LoseFocusOnEnter"
                         components:SelectTextOnFocus.Active="True"/>
            </Grid>

            <!-- Temperature -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Label Grid.Column="0"
                       Content="Temperature"
                       Style="{StaticResource Style_LabelDownMenu}" />
                <TextBox Grid.Column="1"
                         Style="{StaticResource Style_TextBoxValues}"
                         Text="{Binding CurrentTemperature, Mode=TwoWay, UpdateSourceTrigger=LostFocus, StringFormat={}{0:f1}}"
                         KeyDown="Event_LoseFocusOnEnter"
                         components:SelectTextOnFocus.Active="True"/>
            </Grid>

            <!-- Volume Correction -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Label Grid.Column="0"
                       Content="Volume Correction"
                       Style="{StaticResource Style_LabelDownMenu}" />
                <TextBlock Grid.Column="1"
                           Name="Output_VolumeCorrection"
                           Style="{StaticResource Style_OutputTextBlock}"
                           Text="{Binding VolumeCorrection, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, StringFormat={}{0:f4}}" />
            </Grid>

            <!-- WeightAirToVac -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Label Grid.Column="0"
                       Content="WeightAirToVac"
                       Style="{StaticResource Style_LabelDownMenu}" />
                <TextBlock Grid.Column="1"
                           Name="Output_WeightAirToVac"
                           Style="{StaticResource Style_OutputTextBlock}"
                           Text="{Binding WeightAirToVac, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, StringFormat={}{0:f4}}" />
            </Grid>

            <!-- WeightVacToAir -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Label Grid.Column="0"
                       Content="WeightVacToAir"
                       Style="{StaticResource Style_LabelDownMenu}" />
                <TextBlock Grid.Column="1"
                           Name="Output_WeightVacToAir"
                           Style="{StaticResource Style_OutputTextBlock}"
                           Text="{Binding WeightVacToAir, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, StringFormat={}{0:f4}}" />
            </Grid>

        </StackPanel>
    </Grid>
</Window>
