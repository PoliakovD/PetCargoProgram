<UserControl x:Class="PetCargoProgram.Components.ViewBallastTank"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:PetCargoProgram.Converters"
             x:Name="ComponentBallastTank">

    <UserControl.Resources>
        <ResourceDictionary Source="Styles/Styles.xaml"/>
    </UserControl.Resources>

    <Grid DataContext="{Binding ElementName=ComponentBallastTank}"
          MaxHeight="125">
        <GroupBox Name ="GroupBoxTank" Style="{StaticResource Style_GroupBoxBallast}"
                  Header="{Binding Path=BallastTankName, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}">
            <Grid >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="4*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Label  Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="2"
                        Style="{StaticResource Style_ValueLabel}">
                    <TextBlock Text="{Binding Path=Percents, StringFormat=\{0:p2\},UpdateSourceTrigger=PropertyChanged}"/>
                </Label>
                <Slider
                    x:Name="IO_SliderVolume"
                    Style="{StaticResource Style_SliderVolume}"
                    Grid.Column="0" Grid.Row="1"
                    Grid.RowSpan="3"
                    Maximum="1"
                    Value ="{Binding Path=Percents,
                    Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                </Slider>
                <ProgressBar Grid.Column="1" Grid.Row="1" Grid.RowSpan="3"
                             Style="{StaticResource Style_ProgressBarVolume}"
                             Value="{Binding Path=Percents, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"/>
                <Button Name ="Input_ValveButtonStatus"
                        Grid.Column="2" Grid.Row="0"
                        Content=""
                        Style="{StaticResource Style_ButtonValve}"
                        Template="{StaticResource Template_ButtonValve}"
                        Click="Event_ButtonValveClick"/>
                <Label  Name ="Output_ValveStatus"
                        Grid.Column="3" Grid.Row="0"
                        Target="Input_ValveButtonStatus"
                        Style="{StaticResource Style_ValueLabel}"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        Padding="0,0,0,2"/>

                <Label Grid.Column="2" Grid.Row="1"
                       Target="Input_Output_Volume"
                       Content ="V:"
                       Style="{StaticResource Style_ValueLabel}"/>
                <TextBox Grid.Column="3" Grid.Row="1"
                         Name ="Input_Output_Volume"
                         Template="{StaticResource Template_IOTextBoxValues}"
                         Style="{StaticResource Style_TextBoxValues}"
                         Text="{Binding Path=Volume, Mode=TwoWay, UpdateSourceTrigger=LostFocus,
                         StringFormat=\{0:f2\}}"
                         KeyDown="Event_LoseFocusOnEnter"/>

                <Label  Grid.Column="2" Grid.Row="2"
                        Target="Input_Output_Weight"
                        Content ="W:"
                        Style="{StaticResource Style_ValueLabel}"/>
                <TextBox Grid.Column="3" Grid.Row="2"
                         Name ="Input_Output_Weight"
                         Template="{StaticResource Template_IOTextBoxValues}"
                         Style="{StaticResource Style_TextBoxValues}"
                         Text="{Binding Path=Weight, Mode=TwoWay, UpdateSourceTrigger=LostFocus,
                         StringFormat=\{0:f2\}}"
                         KeyDown="Event_LoseFocusOnEnter"/>

                <Label  Grid.Column="2" Grid.Row="3"
                        Target="Input_Output_Sound"
                        Content ="S:"
                        Style="{StaticResource Style_ValueLabel}"/>
                <TextBox Grid.Column="3" Grid.Row="3"
                         Name ="Input_Output_Sound"
                         Template="{StaticResource Template_IOTextBoxValues}"
                         Style="{StaticResource Style_TextBoxValues}"
                         Text="{Binding Path=Sound, Mode=TwoWay, UpdateSourceTrigger=LostFocus,
                         StringFormat=\{0:f2\}}"
                         KeyDown="Event_LoseFocusOnEnter"/>

            </Grid>
        </GroupBox>
    </Grid>
</UserControl>

