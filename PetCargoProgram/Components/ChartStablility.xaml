<UserControl x:Class="PetCargoProgram.Components.ChartStablility"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Name="Component">

    <UserControl.Resources>
        <ResourceDictionary Source="Styles/Styles.xaml"/>
    </UserControl.Resources>

    <Grid Margin="5"
          DataContext="{Binding ElementName=Component}"
          x:Name="GridMain">

        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Image Name="DrawingImage" VerticalAlignment="Bottom" HorizontalAlignment="Stretch"
               Grid.Row="0"/>

    </Grid>

</UserControl>

