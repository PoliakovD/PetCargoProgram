<UserControl x:Class="PetCargoProgram.Components.ComponentShipCondition"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Name="Component">
    <Grid DataContext="{Binding ElementName=Component}">
        <GroupBox Header="Displacement">
            <StackPanel Orientation="Vertical">
                <StackPanel Orientation="Horizontal">
                    <Label Content="Light Weight"/>
                    <TextBox Name = "OutputLightWeight"
                             IsReadOnly="true"
                             Text="{Binding}"/>
                </StackPanel>
            </StackPanel>
        </GroupBox>
    </Grid>
</UserControl>

