<UserControl x:Class="PetCargoProgram.Components.ComponentShipCondition"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:c="clr-namespace:PetCargoProgram.Components"
             x:Name="Component">

    <UserControl.Resources>
        <ResourceDictionary Source="Styles/Styles.xaml">
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid DataContext="{Binding ElementName=Component}">
        <WrapPanel Orientation="Vertical">
            <GroupBox Header="Displacement"
                      MinWidth="180">
                <StackPanel Orientation="Vertical">
                    <c:OutputValue Title="Light Weight"
                                   Value="{Binding Path=LightWeight,
                                   Mode=OneWay,UpdateSourceTrigger=PropertyChanged,StringFormat=\{0:f0\}}"/>
                    <c:OutputValue Title="Deadweight"
                                   Value="{Binding Path=DeadWeight,
                                   Mode=OneWay,UpdateSourceTrigger=PropertyChanged,StringFormat=\{0:f1\}}"/>
                    <c:OutputValue Title="Displacement"
                                   Value="{Binding Path=Displacement,
                                   Mode=OneWay,UpdateSourceTrigger=PropertyChanged,StringFormat=\{0:f1\}}"/>
                    <c:OutputValue Title="Deadweight Reg"
                                   Value="{Binding Path=DeadWeightRegistred,
                                   Mode=OneWay,UpdateSourceTrigger=PropertyChanged,StringFormat=\{0:f0\}}"/>
                    <c:OutputValue Title="TrimAngle"
                                   Value="{Binding Path=TrimAngle,
                                   Mode=OneWay,UpdateSourceTrigger=PropertyChanged,StringFormat=\{0:f2\}}"/>
                </StackPanel>
            </GroupBox>
            <GroupBox Header="On Board"
                      MinWidth="120">
                <StackPanel Orientation="Vertical">
                    <c:OutputValue Title="Cargo"
                                   Value="{Binding Path=CargoOnBoard,
                                   Mode=OneWay,UpdateSourceTrigger=PropertyChanged,StringFormat=\{0:f1\}}"/>
                    <c:OutputValue Title="Ballast"
                                   Value="{Binding Path=BallastOnBoard,
                                   Mode=OneWay,UpdateSourceTrigger=PropertyChanged,StringFormat=\{0:f1\}}"/>
                    <c:OutputValue Title="Fuel Oil"
                                   Value="{Binding Path=FuelOilOnBoard,
                                   Mode=OneWay,UpdateSourceTrigger=PropertyChanged,StringFormat=\{0:f2\}}"/>
                    <c:OutputValue Title="Diesel Oil"
                                   Value="{Binding Path=DieselOilOnBoard,
                                   Mode=OneWay,UpdateSourceTrigger=PropertyChanged,StringFormat=\{0:f2\}}"/>
                    <c:OutputValue Title="Lube Oil"
                                   Value="{Binding Path=LubeOilOnBoard,
                                   Mode=OneWay,UpdateSourceTrigger=PropertyChanged,StringFormat=\{0:f2\}}"/>
                    <c:OutputValue Title="Fresh Water"
                                   Value="{Binding Path=FreshWaterOnBoard,
                                   Mode=OneWay,UpdateSourceTrigger=PropertyChanged,StringFormat=\{0:f2\}}"/>
                    <c:OutputValue Title="Other Stores"
                                   Value="{Binding Path=OtherStoresOnBoard,
                                   Mode=OneWay,UpdateSourceTrigger=PropertyChanged,StringFormat=\{0:f2\}}"/>
                </StackPanel>
            </GroupBox>
            <GroupBox Header="Drafts"
                      MinWidth="120">
                    <StackPanel Orientation="Vertical">
                        <c:OutputValue Title="DraftEquiv"
                                       Value="{Binding Path=DraftEquiv,
                                       Mode=OneWay,UpdateSourceTrigger=PropertyChanged,StringFormat=\{0:f2\}}"/>

                        <c:OutputValue Title="DraftFore"
                                       Value="{Binding Path=DraftFore,
                                       Mode=OneWay,UpdateSourceTrigger=PropertyChanged,StringFormat=\{0:f2\}}"/>

                        <c:OutputValue Title="DraftAft"
                                       Value="{Binding Path=DraftAft,
                                       Mode=OneWay,UpdateSourceTrigger=PropertyChanged,StringFormat=\{0:f2\}}"/>

                        <c:OutputValue Title="DraftMean"
                                       Value="{Binding Path=DraftMean,
                                       Mode=OneWay,UpdateSourceTrigger=PropertyChanged,StringFormat=\{0:f2\}}"/>

                        <c:OutputValue Title="DraftActual"
                                       Value="{Binding Path=DraftActual,
                                       Mode=OneWay,UpdateSourceTrigger=PropertyChanged,StringFormat=\{0:f2\}}"/>

                        <c:OutputValue Title="Trim"
                                       Value="{Binding Path=Trim,
                                       Mode=OneWay,UpdateSourceTrigger=PropertyChanged,StringFormat=\{0:f2\}}"/>

                        <c:OutputValue Title="List"
                                       Value="{Binding Path=List,
                                       Mode=OneWay,UpdateSourceTrigger=PropertyChanged,StringFormat=\{0:f2\}}"/>
                    </StackPanel>
                </GroupBox>
        </WrapPanel>
    </Grid>
</UserControl>

