<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Цвета морской темы -->
    <Color x:Key="NavyBlue">#0F1C3F</Color>           <!-- Глубокий синий (панели) -->
    <Color x:Key="OceanBlue">#0077BE</Color>          <!-- Чистая вода -->
    <Color x:Key="SteelBlue">#3A506B</Color>          <!-- Металлический серо-синий -->
    <Color x:Key="LightSteel">#6889B6</Color>         <!-- Светлый металл -->
    <Color x:Key="Highlight">#00D1C1</Color>           <!-- Бирюзовый акцент (сигнал) -->
    <Color x:Key="WarningRed">#FF3B30</Color>          <!-- Авария/ошибка -->
    <Color x:Key="Background">#E0ECF8</Color>          <!-- Лёгкий голубой фон -->
    <Color x:Key="TextLight">#FFFFFF</Color>           <!-- Белый текст -->
    <Color x:Key="TextDark">#1C2833</Color>            <!-- Тёмный текст -->
    <Color x:Key="Border">#005F87</Color>              <!-- Тёмная граница -->

    <!-- Кисти -->
    <SolidColorBrush x:Key="Brush_NavyBlue" Color="{StaticResource NavyBlue}"/>
    <SolidColorBrush x:Key="Brush_OceanBlue" Color="{StaticResource OceanBlue}"/>
    <SolidColorBrush x:Key="Brush_SteelBlue" Color="{StaticResource SteelBlue}"/>
    <SolidColorBrush x:Key="Brush_LightSteel" Color="{StaticResource LightSteel}"/>
    <SolidColorBrush x:Key="Brush_Highlight" Color="{StaticResource Highlight}"/>
    <SolidColorBrush x:Key="Brush_WarningRed" Color="{StaticResource WarningRed}"/>
    <SolidColorBrush x:Key="Brush_Background" Color="{StaticResource Background}"/>
    <SolidColorBrush x:Key="Brush_TextLight" Color="{StaticResource TextLight}"/>
    <SolidColorBrush x:Key="Brush_TextDark" Color="{StaticResource TextDark}"/>
    <SolidColorBrush x:Key="Brush_Border" Color="{StaticResource Border}"/>

    <!-- Шрифты -->
    <FontFamily x:Key="NauticalFont">Consolas</FontFamily>
    <FontFamily x:Key="DisplayFont">Courier New</FontFamily>

    <!-- Стиль: Группа балластного танка -->
    <Style x:Key="Style_GroupBoxBallast" TargetType="GroupBox">
        <Setter Property="BorderBrush" Value="{StaticResource Brush_OceanBlue}"/>
        <Setter Property="BorderThickness" Value="2"/>
        <Setter Property="Padding" Value="6"/>
        <Setter Property="Margin" Value="6"/>
        <Setter Property="Background">
            <Setter.Value>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Color="#D0E4F7" Offset="0"/>
                    <GradientStop Color="{StaticResource Background}" Offset="1"/>
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
        <Setter Property="HeaderTemplate">
            <Setter.Value>
                <DataTemplate>
                    <Border Background="{StaticResource Brush_OceanBlue}"
                            CornerRadius="4"
                            Padding="8,3">
                        <TextBlock Text="{Binding}"
                                   Foreground="{StaticResource Brush_TextLight}"
                                   FontSize="13"
                                   FontWeight="Bold"
                                   FontFamily="{StaticResource DisplayFont}"
                                   TextAlignment="Center"/>
                    </Border>
                </DataTemplate>
            </Setter.Value>
        </Setter>
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect Color="#888888" Opacity="0.4" BlurRadius="4" ShadowDepth="1"/>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Стиль: Метка со значением -->
    <Style x:Key="Style_ValueLabel" TargetType="Label">
        <Setter Property="Foreground" Value="{StaticResource Brush_TextDark}"/>
        <Setter Property="FontFamily" Value="{StaticResource DisplayFont}"/>
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="FontWeight" Value="Normal"/>
        <Setter Property="HorizontalContentAlignment" Value="Right"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="Margin" Value="2"/>
        <Setter Property="Padding" Value="4,2"/>
        <Setter Property="ToolTipService.ShowDuration" Value="5000"/>
    </Style>

    <!-- Слайдер объема -->
    <Style x:Key="Style_SliderVolume" TargetType="Slider">
        <Setter Property="Width" Value="24"/>
        <Setter Property="Margin" Value="6"/>
        <Setter Property="Orientation" Value="Vertical"/>
        <Setter Property="Maximum" Value="1"/>
        <Setter Property="Minimum" Value="0"/>
        <Setter Property="IsSnapToTickEnabled" Value="True"/>
        <Setter Property="TickFrequency" Value="0.01"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Slider">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Track Grid.Row="0"
                               Value="{TemplateBinding Value}"
                               Minimum="{TemplateBinding Minimum}"
                               Maximum="{TemplateBinding Maximum}"
                               IsDirectionReversed="True">
                            <Track.DecreaseRepeatButton>
                                <RepeatButton Style="{StaticResource Style_VolumeTrackButton}"
                                              Background="{StaticResource Brush_OceanBlue}"
                                              BorderBrush="{StaticResource Brush_Border}"/>
                            </Track.DecreaseRepeatButton>
                            <Track.Thumb>
                                <Thumb Width="14" Height="14"
                                       Background="{StaticResource Brush_Highlight}"
                                       BorderBrush="{StaticResource Brush_Border}"
                                       BorderThickness="1"
                                       Margin="0"/>
                            </Track.Thumb>
                            <Track.IncreaseRepeatButton>
                                <RepeatButton Style="{StaticResource Style_VolumeTrackButton}"
                                              Background="{StaticResource Brush_SteelBlue}"/>
                            </Track.IncreaseRepeatButton>
                        </Track>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Повторяющаяся кнопка для слайдера -->
    <Style x:Key="Style_VolumeTrackButton" TargetType="RepeatButton">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="RepeatButton">
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="1"
                            CornerRadius="2"/>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Прогресс-бар заполнения -->
    <Style x:Key="Style_ProgressBarVolume" TargetType="ProgressBar">
        <Setter Property="Minimum" Value="0"/>
        <Setter Property="Maximum" Value="1"/>
        <Setter Property="IsIndeterminate" Value="False"/>
        <Setter Property="Orientation" Value="Vertical"/>
        <Setter Property="Height" Value="100"/>
        <Setter Property="Width" Value="20"/>
        <Setter Property="Margin" Value="4,0"/>
        <Setter Property="Foreground">
            <Setter.Value>
                <LinearGradientBrush StartPoint="0,1" EndPoint="0,0">
                    <GradientStop Color="{StaticResource OceanBlue}" Offset="0"/>
                    <GradientStop Color="{StaticResource Highlight}" Offset="1"/>
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
        <Setter Property="Background" Value="#D0E0F0"/>
        <Setter Property="BorderBrush" Value="{StaticResource Brush_Border}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ProgressBar">
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="3">
                        <Grid>
                            <Rectangle x:Name="PART_Track"/>
                            <Rectangle x:Name="PART_Indicator"
                                       Fill="{TemplateBinding Foreground}"
                                       Margin="1"/>
                            <Border BorderBrush="{StaticResource Brush_Border}"
                                    BorderThickness="1"
                                    CornerRadius="2"
                                    Opacity="0.1"
                                    Background="White"/>
                        </Grid>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Кнопка клапана -->
    <Style x:Key="Style_ButtonValve" TargetType="Button">
        <Setter Property="Width" Value="32"/>
        <Setter Property="Height" Value="32"/>
        <Setter Property="Margin" Value="4"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="BorderBrush" Value="{StaticResource Brush_Border}"/>
        <Setter Property="Background" Value="{StaticResource Brush_SteelBlue}"/>
        <Setter Property="Template">
            <Setter.Value>
                <StaticResource ResourceKey="Template_ButtonValve"/>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Шаблон кнопки клапана: световой индикатор -->
    <ControlTemplate x:Key="Template_ButtonValve" TargetType="Button">
        <Grid>
            <Ellipse Fill="{TemplateBinding Background}"
                     Stroke="{TemplateBinding BorderBrush}"
                     StrokeThickness="{TemplateBinding BorderThickness}"/>
            <Ellipse x:Name="LightIndicator"
                     Margin="6"
                     Fill="Gray"
                     Stroke="{StaticResource Brush_Border}"
                     StrokeThickness="1"/>
        </Grid>
    </ControlTemplate>

    <!-- Статус клапана -->
    <Style x:Key="Style_ValveStatusLabel" TargetType="Label">
        <Setter Property="Foreground" Value="{StaticResource Brush_TextDark}"/>
        <Setter Property="FontFamily" Value="{StaticResource DisplayFont}"/>
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="Padding" Value="6,0,0,2"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>

    <!-- Общие стили для TextBox -->
    <Style x:Key="Style_TextBoxValues" TargetType="TextBox">
        <Setter Property="Foreground" Value="{StaticResource Brush_TextDark}"/>
        <Setter Property="Background" Value="#F0F8FF"/>
        <Setter Property="BorderBrush" Value="{StaticResource Brush_SteelBlue}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="4"/>
        <Setter Property="Margin" Value="2"/>
        <Setter Property="FontFamily" Value="{StaticResource NauticalFont}"/>
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="FontWeight" Value="Normal"/>
        <Setter Property="TextAlignment" Value="Right"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
        <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
        <Setter Property="Template">
            <Setter.Value>
                <StaticResource ResourceKey="Template_IOTextBoxValues"/>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Шаблон TextBox — как на панели -->
    <ControlTemplate x:Key="Template_IOTextBoxValues" TargetType="TextBox">
        <Border x:Name="border"
                Background="{TemplateBinding Background}"
                BorderBrush="{TemplateBinding BorderBrush}"
                BorderThickness="{TemplateBinding BorderThickness}"
                CornerRadius="2"
                Padding="{TemplateBinding Padding}">
            <ScrollViewer x:Name="PART_ContentHost" Focusable="False" HorizontalAlignment="Right"/>
        </Border>
        <ControlTemplate.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource Brush_OceanBlue}"/>
            </Trigger>
            <Trigger Property="IsFocused" Value="True">
                <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource Brush_Highlight}"/>
                <Setter TargetName="border" Property="Effect">
                    <Setter.Value>
                        <DropShadowEffect Color="{StaticResource Highlight}" BlurRadius="6" ShadowDepth="0" Opacity="0.6"/>
                    </Setter.Value>
                </Setter>
            </Trigger>
        </ControlTemplate.Triggers>
    </ControlTemplate>

</ResourceDictionary>

